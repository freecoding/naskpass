#!/bin/sh

. /etc/naskpass.conf


echo -n 'waiting for ip '
CURWAIT=$MAXWAIT

if [ -x /sbin/dropbear ]; then
while ! $(ifconfig -a | grep -qoE 'inet addr:'); do
	echo -n '.'
	if [ $CURWAIT -le 0 ]; then
		echo ' got no ip, continue anyway.'
		break
	fi
	CURWAIT=$(expr $CURWAIT - 1)
	sleep 1
done
echo
fi

