#!/bin/sh

. /etc/naskpass.conf

if [ "x${OLDPRINTK}" != "x" ] && [ -r ${OLDPRINTK} ] && [ -w ${PRINTK} ]; then
	cat ${OLDPRINTK} >${PRINTK}
fi

kill $(pidof sshd)

for interface in $(ifconfig | grep -oE '^[a-zA-Z0-9]+\s+'); do
	echo "disable ${interface}"
	ifconfig ${interface} 0.0.0.0
	ifconfig ${interface} down
done

